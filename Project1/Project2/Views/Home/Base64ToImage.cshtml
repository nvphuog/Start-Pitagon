
@{
    ViewData["Title"] = "Base64ToImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var load = ViewData["StringInput"] as string;
}

<head>
    <link href="~/assets/css/app.min.css" rel="stylesheet">
</head>

<h1 class="text-center mt-3">Base64 To Image</h1>
<form class="mt-3" asp-action="Base64ToImage" method="post">
    <div class="col-12">
        <div>
            <a class="btn btn-primary m-r-5" asp-controller="Home" asp-action="Index">Number To String</a>
            <a class="btn btn-info m-r-5" asp-controller="Home" asp-action="StringToBase64">String To Base64</a>
            <a class="btn btn-warning m-r-5" asp-controller="Home" asp-action="StringToByte">String To Byte</a>
            <a class="btn btn-secondary m-r-5" asp-controller="Home" asp-action="ImageToBase">Image To Base64</a>
            <a class="btn btn-success m-r-5" asp-controller="Home" asp-action="Base64ToImage">Base64 To Image</a>
        </div>

        <textarea oninput="" class="form-control mt-3" id="" name="Input" rows="3"></textarea>
        @* <input class="col-md-4" type="text" name="Input" placeholder="Numbers"> *@
    </div>
    <div class="col-12 text-center mt-3">
        <button class="btn btn-danger btn-tone m-r-5 btn-xs" type="submit">
            <i class="anticon anticon-sync"></i>
        </button>
    </div>
    <div class="col-12 text-center">
        
        <img class="mt-3" width="300" height="300" src="data:image/png;base64, @load"/>
        
    </div>
</form>